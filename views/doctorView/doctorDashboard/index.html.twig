{% extends "base.html.twig" %}
{% block title %}
	<title>PerfADom/Dashboard-Médecin</title>
{% endblock %}
{% block link %}
	<link rel="stylesheet" href="/css/styleDoctorDashboard.css">
{% endblock %}

{% block header %}
	{% include "layouts/header.html.twig" %}
{% endblock %}
{% block main %}
	<main>
		<div class="barnavContainer">
			<div id="top_barnav">
				<p class="bold">Bienvenue
					<br>
					{{doctorName|upper}}
					{{doctorFirstname}}</p>
				<div class="line"></div>
				<p class="bold title">Mes patients</p>
			</div>
			<div class="linklistContainer">
				<div class="line"></div>
				<div class="linkList">
					<a class="margin" href="">Mes modèles</a>
					<a class="margin" href="">Mon compte</a>
				</div>
			</div>
		</div>
		
	<div class="dashboardContainer">
		<div id="breadcrumb">
			<span>Dashboard</span>
		</div>
		<div class="searchContainer">
			<form class="form_search" action="" method="post">
				<input class="input_search" type="text" name="search" placeholder="Rechercher  patient">
				<button class="search"><img src="/images/search.png" alt="images/search.png"></button>
			</form>
			<a href="/addPatient" class="button">
				<span class="button__text">Add Patient</span>
				<span class="button__icon">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" viewbox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg">
						<line y2="19" y1="5" x2="12" x1="12"></line>
						<line y2="12" y1="12" x2="19" x1="5"></line>
					</svg>
				</span>
			</a>
		</div>
		<div class="patientList">
			{% for patient in patientList %}
				<div class="patientCard">
					<div class="namePatient">
						<p>{{patient.gender}}
							{{patient.firstname}}
							{{patient.name|upper}}
						</p>
					</div>
					<div class="birthday">
						<p>Date de naissance :
							<span class="formattedDate">{{patient.birthday}}</span>
						</p>
					</div>
					<div class="detailContainer">
						<a id="details" href="/detailPatient/{{patient._id}}">Détails</a>
					</div>
					<a href="/deletePatient/{{patient._id}}"><img class="deleteButton" src="/images/logosupprimer.png" alt="supprimer"></a>
				</div>
			{% endfor %}
		</div>
	</div>
		</main>
	{% endblock %}
	{% block footer %}
		{% include "layouts/footer.html.twig" %}
	{% endblock %}
	{% block script %}
		<script src="/js/dashboard.js"></script>
	{% endblock %}
