<div class="barnavContainer">
	<div id="top_barnav">
		<p class="bold">Bienvenue
			<br>
			{{userName|upper}}
			{{userFirstname}}
			{% if userSociety is defined %}
				<br>
				{{userSociety|upper}}
			{% endif %}
		</p>
		<div class="line"></div>
		{% if role == "doctor" or role =="prestataire" %}
			{% if uri != '//doctorDashboard?searchPatient' %}
				{% if uri == "/doctorDashboard" or uri =="/addPatient" or uri =="/prestataireDashboard" or uri =='/searchMyPatientD' or uri =='/searchMyPatientP' %}
					<p class="bold title">Mes patients</p>
				{% else %}
					{% if patient.id in doctor.patientList %}
						<p class="bold title">Mon patient</p>
					{% endif %}
					<p class="bold">{{patient.gender}}
						{{patient.firstname}}
						{{patient.name|upper}}</p>
					{% if patient.id in doctor.patientList %}
						<a {% if role == "doctor" %} href="/updatePatientD/{{patient._id}}" {% else %} href="/updatePatientP/{{patient._id}}" {% endif %} {% if uri == "/updatePatientD" or uri == "/updatePatientP" %} class="bold" {% endif %}>Modifier ses informations</a>
						{% if role == "doctor" %}
							<br>
							<br>
							<a href="/addTreatment/{{patient._id}}" {% if uri == "/addTreatment"  %} class="bold" {% endif %}>Ajouter un traitement</a>
						{% endif %}
					{% endif %}


				{% endif %}
			{% endif %}
		{% endif %}
	</div>
	<div class="linklistContainer">
		<div class="line"></div>
		<div class="linkList">
			{# {% if role == "doctor" %}
				<a class="margin" href="">Mes mod√®les</a>
			{% endif %} #}
			<a class="margin" href="">Mon compte</a>
		</div>
	</div>
</div>
